@model CategoryModel

<h3>Edit Movie</h3>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Admin" asp-action="EditCategory" method="post">
            <input type="hidden" asp-for="CategoryId" />
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Url" class="form-label"></label>
                <input asp-for="Url" class="form-control" />
            </div>
            <div class="">
                <button type="submit" class="btn btn-success">Edit Category</button>
            </div>

        </form>
    </div>
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-bordered table-sm">
                    <thead>
                        <tr>
                            <th style="width:30px;">Id</th>
                            <th style="width:100px;">Image</th>
                            <th>Name</th>
                            <th style="width:20px;">Price</th>
                            <th style="width:20px;">IsApproved</th>
                            <th style="width:180px;">Settings</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Movies.Count > 0)
                        {
                            @foreach (var item in Model.Movies)
                            {
                                <tr>
                                    <th>@item.MovieId</th>
                                    <td><img src="~/img/@item.Image" width="150px;"></td>
                                    <td>@item.MovieName</td>
                                    <td>@item.Price</td>
                                    <td>
                                        @if (@item.IsApproved)
                                        {
                                            <i class="fas fa-check-circle"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-times-circle"></i>
                                        }
                                    </td>
                                    <td>
                                        <a asp-controller="Admin" asp-action="EditMovie" asp-route-id="@item.MovieId" class="btn btn-primary  mr-2">Edit</a>
                                        <form asp-controller="Admin" asp-action="DeleteMovie" method="post" style="display: inline-block;">
                                            <input type="hidden" name="movieId" value=" @item.MovieId">
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <div class="alert alert-warning">
                                <h3>There is no movie!</h3>
                            </div>
                        }

                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>
