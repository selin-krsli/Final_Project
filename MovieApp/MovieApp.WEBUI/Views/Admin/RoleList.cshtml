@model IEnumerable<IdentityRole>

<div class="row">
    <div class="col-md-12">
        <h1>Role List</h1>
        <hr />
        <a asp-controller="Admin" asp-action="CreateRole" class="btn btn-primary btn-sm">Create Role</a>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <th style="width:250px;">Id</th>
                    <th>Role Name</th>
                    <th style ="width:160px;"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>@item.Id</th>
                            <td>@item.Name</td>
                            <td>
                                <a asp-controller="Admin" asp-action="EditRole" asp-route-id="@item.Id" class="btn btn-primary btn-sm mr-2">Edit</a>
                                <form asp-controller="Admin" asp-action="DeleteRole" method="post" style="display: inline-block;">
                                    <input type="hidden" name="RoleId" value=" @item.Id">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>There is no role!</h3>
                    </div>
                }

            </tbody>
        </table>
    </div>
</div>