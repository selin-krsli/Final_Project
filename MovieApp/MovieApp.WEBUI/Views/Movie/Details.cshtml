@model MovieCategoryViewModel

<div class="row">
    <div class="col-md-3">
        <img src="~/img/@Model.Movie.Image" class="img-fluid" />
    </div>
    <div class="col-md-9">
            <h1 class="card-title">@Model.Movie.MovieName</h1>
            <hr />
            @foreach(var item in Model.Categories)
            {
                 <a href="#" class="btn btn-link p-0 mb-3">| @item.Name |</a>
            }
            <div class="mb-3">
                <h4 class="text-primary mb-3">
                    <i class="fas fa-lira-sign"></i>@Model.Movie.Price
                </h4>
                <button type="submit" class="btn btn-primary btn-lg">Add To Card</button>
                </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <p class="p-2">@Model.Movie.MovieStory</p>
    </div>
</div>



