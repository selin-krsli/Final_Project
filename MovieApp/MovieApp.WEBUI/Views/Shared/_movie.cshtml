@model Movie
<div class="card mb-2">
    <img class="card-img-top" src="~/img/@Model.Image" alt="" />
    <div class="card-body">
        <h5 class="card-title">@Model.MovieName</h5>
        <small class="text-muted">
            <i class="fas fa-lira-sign"></i>@Model.Price
        </small>      
    </div>
    <div class="card-footer text-center">
        <a asp-controller="Movie" asp-action="Details" asp-route-url="@Model.Url" class="btn btn-primary btn-sm">Details</a>
        @if(User.Identity.IsAuthenticated)
        {
            <form asp-controller="Cart" asp-action="AddToCart" method="post" style="display:inline;">
                <input type="hidden" name="movieId" value="@Model.MovieId" />
                <input type="hidden" name="quantity" value="1" />
                <button type="submit" class="btn btn-primary btn-sm">Add To Card</button>
            </form>
        }
    </div>
</div>
